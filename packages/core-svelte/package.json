{
  "name": "@moolah/core-svelte",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "sideEffects": false,
  "exports": {
    "./api": {
      "types": "./dist/api/index.d.ts",
      "default": "./dist/api/index.js"
    },
    "./components/*": {
      "types": "./dist/components/*/index.d.ts",
      "svelte": "./dist/components/*/index.js"
    },
    "./stores/*": {
      "types": "./dist/stores/*/index.d.ts",
      "default": "./dist/stores/*/index.js"
    },
    "./types": {
      "types": "./dist/types/index.d.ts",
      "default": "./dist/types/index.js"
    },
    "./utils": {
      "types": "./dist/utils/index.d.ts",
      "default": "./dist/utils/index.js"
    }
  },
  "files": [
    "dist",
    "!dist/**/*.test.*",
    "!dist/**/*.spec.*",
    "src",
    "!src/**/*.test.*",
    "!src/**/*.spec.*"
  ],
  "scripts": {
    "dev": "svelte-kit sync && svelte-package --watch --input=src",
    "build": "svelte-kit sync && svelte-package --input=src",
    "typecheck": "svelte-check --tsconfig ./tsconfig.json",
    "clean": "rimraf .turbo node_modules dist .svelte-kit",
    "format": "prettier --check .",
    "format:fix": "prettier --write .",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix"
  },
  "peerDependencies": {
    "svelte": "5.45.6"
  },
  "dependencies": {
    "@moolah/common-svelte": "workspace:^"
  },
  "devDependencies": {
    "@moolah/config-eslint": "workspace:^",
    "@moolah/config-prettier": "workspace:^",
    "@moolah/config-typescript": "workspace:^",
    "@sveltejs/kit": "^2.49.1",
    "@sveltejs/package": "^2.5.0",
    "@sveltejs/vite-plugin-svelte": "^6.2.1",
    "@types/node": "24.3.0",
    "svelte": "5.45.6",
    "svelte-check": "4.3.4",
    "typescript": "*",
    "vite": "7.2.6"
  }
}
