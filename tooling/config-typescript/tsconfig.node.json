{
    "$schema": "https://json.schemastore.org/tsconfig",
    "display": "Node",
    "extends": "./tsconfig.base.json",
    "compilerOptions": {
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "lib": ["es2022"],

        /* Modules and Code Generation */
        "outDir": "dist", // Specifies the output directory for all emitted files. This keeps your compiled files separate from your source files.
        "tsBuildInfoFile": "./dist/.tsbuildinfo" // Specifies the path to the file that will store incremental compilation information between runs.
    }
}
